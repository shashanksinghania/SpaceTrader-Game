<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-image: url(&quot;playerMenuBackground.jpg&quot;); -fx-background-size: cover; -fx-background-repeat: no-repeat; -fx-background-position: center center;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UniverseController">
   <children>
      <Pane fx:id="paneRegion" layoutX="132.0" layoutY="14.0" prefHeight="300.0" prefWidth="397.0" />
      <Pane layoutX="573.0" layoutY="11.0" prefHeight="378.0" prefWidth="226.0">
         <children>
            <Label fx:id="lblNameRegion" layoutX="25.0" layoutY="11.0" text="Name" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Century Gothic" size="25.0" />
               </font></Label>
            <Label fx:id="lblTechnologyLevel" layoutX="106.0" layoutY="68.0" text="Technology Level" textAlignment="CENTER" textFill="WHITE" />
            <Label fx:id="lblDescription" layoutX="25.0" layoutY="150.0" prefHeight="200.0" prefWidth="155.0" text="Description" textFill="WHITE">
               <font>
                  <Font name="Century Gothic" size="12.0" />
               </font></Label>
            <Button fx:id="btnMarketplace" layoutX="50.0" layoutY="100.0" minHeight="30.0" minWidth="125.0" mnemonicParsing="false" onMouseClicked="#goToMarket" text="Visit Marketplace">
               <font>
                  <Font name="Century Gothic" size="12.0" />
               </font></Button>
            <Label fx:id="lblNameLabel" layoutX="25.0" layoutY="11.0" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Century Gothic" size="32.0" />
               </font>
            </Label>
            <Label fx:id="lblTechLevelLabel" layoutX="25.0" layoutY="69.0" text="Tech Level: " textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Century Gothic" size="12.0" />
               </font></Label>
         </children>
      </Pane>
      <Button fx:id="btnPreviousRegion" disable="true" layoutX="179.0" layoutY="434.0" minHeight="30.0" minWidth="125.0" mnemonicParsing="false" onAction="#previousRegion" text="Previous Region">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font>
      </Button>
      <Button fx:id="btnNextRegion" layoutX="425.0" layoutY="434.0" minHeight="30.0" minWidth="120.0" mnemonicParsing="false" onAction="#nextRegion" text="Next Region">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font>
      </Button>
      <Button fx:id="btnVisit" layoutX="315.0" layoutY="434.0" minHeight="30.0" minWidth="100.0" mnemonicParsing="false" onAction="#visit" text="Visit" textAlignment="CENTER">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font>
      </Button>
      <Label fx:id="lblDistanceLabel" layoutX="26.0" layoutY="47.0" text="Distance: " textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font>
      </Label>
      <Label fx:id="lblDistance" layoutX="84.0" layoutY="47" text="Distance" textFill="WHITE">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font>
      </Label>
      <Label fx:id="lblCoordinates" layoutX="38.0" layoutY="61" text="Coordinates" textFill="WHITE">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font>
      </Label>
      <Button fx:id="btnUpgrades" layoutX="20" layoutY="14" minHeight="30.0" minWidth="100.0" mnemonicParsing="false" onAction="#upgrade" text="View Upgrades" textAlignment="CENTER">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font>
      </Button>
      <Button fx:id="btnRefuelShip" layoutX="19.0" layoutY="86.0" mnemonicParsing="false" onAction="#refuelShip" prefHeight="30.0" prefWidth="106.0" text="Refuel Ship">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font>
      </Button>
      <Button fx:id="btnRepairShip" layoutX="21.0" layoutY="149.0" mnemonicParsing="false" onAction="#repairShip" prefHeight="30.0" prefWidth="106.0" text="Repair Ship">
         <font>
            <Font name="Century Gothic" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
